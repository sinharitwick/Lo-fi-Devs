<%- include('partials/tnpheader') -%>

<div class="ui main text container segments">
    <div class="ui huge header">
        <h1 style="font-family: 'Poppins', sans-serif; margin-top: 30px;">Edit</h1>
    </div>
    <form class="ui form" action="/tnpposts/<%=tnppost._id%>?_method=PUT" method="POST">
        <div class="field">
            
            <input type="text" name="tnppost[name]" placeholder="Name" value="<%=tnppost.name%>">
        </div>

        <div class="field">
            
            <input type="number" name="tnppost[age]" placeholder="Age" value="<%=tnppost.age%>">
        </div>

        <div class="field">
            
            <textarea name="tnppost[description]" cols="30" rows="10"><%=tnppost.description%></textarea>
        </div>
        <input class="ui violet big basic button" type="Submit">
    </form>
</div>

<%- include('partials/footer') -%>